<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="KIDS.MOBILE.APP.views.Learn.LearnAfternoonView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://prismlibrary.com"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:markupExtension="clr-namespace:KIDS.MOBILE.APP.MarkupExtension;assembly=KIDS.MOBILE.APP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:renderers="clr-namespace:KIDS.MOBILE.APP.Controls.Renderers;assembly=KIDS.MOBILE.APP"
    xmlns:transformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
    mc:Ignorable="d">
    <ContentView.Content>
        <Grid BackgroundColor="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <ScrollView
                Grid.Row="0"
                Grid.RowSpan="5"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                BackgroundColor="Transparent"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="StartAndExpand">
                <StackLayout
                    BackgroundColor="Transparent"
                    Orientation="Vertical"
                    Spacing="0">
                    <Label
                        Margin="0,10"
                        BackgroundColor="Transparent"
                        FontSize="16"
                        HorizontalOptions="CenterAndExpand"
                        Text="{Binding ThoiKhoaBieuChieu}"
                        TextColor="#000"
                        VerticalOptions="CenterAndExpand" />
                    <StackLayout BindableLayout.ItemsSource="{Binding LearnAfternoonData}" HorizontalOptions="CenterAndExpand">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Margin="20,0"
                                    ColumnDefinitions="Auto,*"
                                    HorizontalOptions="FillAndExpand"
                                    RowDefinitions="*,1"
                                    VerticalOptions="CenterAndExpand">
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Text="{Binding ThoiGian}"
                                        TextColor="#000" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        Text="{Binding Contents}"
                                        TextColor="#000" />
                                    <BoxView
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        BackgroundColor="DarkGray" />
                                </Grid>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                    <BoxView
                        Margin="20,0"
                        BackgroundColor="#fff"
                        HeightRequest="10" />
                    <StackLayout BindableLayout.ItemsSource="{Binding StudentData}" HorizontalOptions="CenterAndExpand">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    Margin="10,0"
                                    Padding="0"
                                    BackgroundColor="#fff"
                                    BorderColor="DeepSkyBlue"
                                    CornerRadius="10"
                                    HasShadow="False">
                                    <Grid
                                        Margin="0"
                                        Padding="0"
                                        BackgroundColor="Transparent"
                                        ColumnDefinitions="60,*"
                                        RowDefinitions="20,40,60"
                                        RowSpacing="0">
                                        <forms:CachedImage
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="0"
                                            Margin="5"
                                            Aspect="AspectFit"
                                            DownsampleToViewSize="true"
                                            ErrorPlaceholder="student0.png"
                                            HeightRequest="80"
                                            LoadingPlaceholder="student0.png"
                                            Source="{Binding TmpPicture}">
                                            <forms:CachedImage.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding Sex}"
                                                    TargetType="forms:CachedImage"
                                                    Value="True">
                                                    <Setter Property="ErrorPlaceholder" Value="student1.png" />
                                                    <Setter Property="LoadingPlaceholder" Value="student1.png" />
                                                </DataTrigger>
                                            </forms:CachedImage.Triggers>
                                            <forms:CachedImage.Transformations>
                                                <transformations:CornersTransformation CornersTransformType="AllRounded" />
                                            </forms:CachedImage.Transformations>
                                        </forms:CachedImage>
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            FontSize="16"
                                            Text="{Binding Name}"
                                            VerticalOptions="FillAndExpand" />
                                        <Frame
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Margin="5"
                                            Padding="0"
                                            BackgroundColor="Transparent"
                                            BorderColor="DarkGray"
                                            CornerRadius="5"
                                            HasShadow="False"
                                            HorizontalOptions="FillAndExpand">
                                            <renderers:CustomEditor
                                                AutoSize="Disabled"
                                                BackgroundColor="Transparent"
                                                FontSize="14"
                                                Placeholder="{markupExtension:Translate 00076}"
                                                Text="{Binding StudyCommentPM}"
                                                VerticalOptions="FillAndExpand" />
                                        </Frame>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
            <Frame
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0"
                Padding="0"
                BackgroundColor="{StaticResource BackgroundColorNavBar}"
                CornerRadius="20"
                HasShadow="False"
                HorizontalOptions="End"
                IsVisible="False"
                WidthRequest="150">
                <Label
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    FontSize="15"
                    HorizontalOptions="CenterAndExpand"
                    Text="Cập nhật ngay"
                    TextColor="#fff"
                    VerticalOptions="CenterAndExpand" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding FastFeatureCommand}" CommandParameter="4" />
                </Frame.GestureRecognizers>
                <Frame.Triggers>
                    <DataTrigger
                        Binding="{Binding IsOpenFastFeature}"
                        TargetType="Frame"
                        Value="True">
                        <Setter Property="Frame.IsVisible" Value="True" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding IsOpenFastFeature}"
                        TargetType="Frame"
                        Value="False">
                        <Setter Property="Frame.IsVisible" Value="False" />
                    </DataTrigger>
                </Frame.Triggers>
            </Frame>
            <Frame
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0"
                Padding="0"
                BackgroundColor="{StaticResource BackgroundColorNavBar}"
                CornerRadius="20"
                HasShadow="False"
                HorizontalOptions="End"
                IsVisible="False"
                WidthRequest="200">
                <Label
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    FontSize="15"
                    HorizontalOptions="CenterAndExpand"
                    Text="Tạo nhận xét chung"
                    TextColor="#fff"
                    VerticalOptions="CenterAndExpand" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding FastFeatureCommand}" CommandParameter="3" />
                </Frame.GestureRecognizers>
                <Frame.Triggers>
                    <DataTrigger
                        Binding="{Binding IsOpenFastFeature}"
                        TargetType="Frame"
                        Value="True">
                        <Setter Property="Frame.IsVisible" Value="True" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding IsOpenFastFeature}"
                        TargetType="Frame"
                        Value="False">
                        <Setter Property="Frame.IsVisible" Value="False" />
                    </DataTrigger>
                </Frame.Triggers>
            </Frame>
            <Frame
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0"
                Padding="0"
                BackgroundColor="{StaticResource BackgroundColorNavBar}"
                CornerRadius="20"
                HasShadow="False"
                HorizontalOptions="End"
                VerticalOptions="FillAndExpand"
                WidthRequest="100">
                <Label
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    FontSize="15"
                    HorizontalOptions="CenterAndExpand"
                    Text="Cập nhật"
                    TextColor="#fff"
                    VerticalOptions="CenterAndExpand">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding IsOpenFastFeature}"
                            TargetType="Label"
                            Value="True">
                            <Setter Property="Label.Text" Value="Thoát" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding IsOpenFastFeature}"
                            TargetType="Label"
                            Value="False">
                            <Setter Property="Label.Text" Value="Cập  nhật" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding FastFeatureCommand}" CommandParameter="0" />
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>